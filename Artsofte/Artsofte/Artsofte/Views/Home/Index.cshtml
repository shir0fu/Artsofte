@{
    ViewData["Title"] = "List Employees";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Artsofte.DTO.EmployeeDTO>

<div>
    <h1>A list of employees</h1>

    <h3><a href="/add">ADD</a></h3>

    <table cellpadding="7" border="1">
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Age</th>
            <th>Departament</th>
            <th>Language</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Age</td>
                <td>@item.Departament</td>
                <td>@item.PogrammingLanguage</td>
                <td>
                    <form asp-controller="Home" asp-action="DeleteEmployee" method="post" asp-route-id="@item.Id">
                        <input type="submit" value="Delete" />
                    </form>

                    <a href="/edit/@item.Id">Change</a>

                </td>
            </tr>
        }
    </table>

</div>

