@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Artsofte.DTO.CreateEmployeeDTO

<!doctype html>
<html>

<head>
    <title>Adding an employee</title>
    <meta charset="utf-8" />
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#inputName").autocomplete({
                source: ["Liam", "Noah", "Oliver", "Elijah", "James", "William", "Benjamin", "Lucas", "Henry", "Theodore", "Olivia", "Emma", "Charlotte", "Amelia", "Ava", "Sophia", "Isabella", "Mia", "Evelyn", "Harper"]
            });
        });
    </script>
</head>

<body>
    <h1>Adding an employee</h1>



    <form asp-action="AddEmployee" asp-controller="Home" method="post">
        <p>
            Name <input id="inputName" type="text" asp-for="Name"/>
            <br />
            Surname <input type="text" asp-for="Surname" />
            <br />
            Age <input type="number" asp-for="Age" />
            <br />
            Gender <input type="text" asp-for="Gender" />
            <br />
            Departament
            <select asp-for="Departament">
                <option value="Departament1">Departament1</option>
                <option value="Departament2">Departament2</option>
                <option value="Departament3">Departament3</option>
                <option value="Departament4">Departament4</option>
                <option value="Departament5">Departament5</option>
            </select>
            <br />
            Programming Language
            <select asp-for=PogrammingLanguage>
                <option value="C#">C#</option>
                <option value="PHP">PHP</option>
                <option value="JS">JS</option>
                <option value="Rust">Rust</option>
                <option value="C++">C++</option>
            </select>
            <br/>
            <input type="submit" value="Add" /> <a href="/">Cancel</a>
        </p>
    </form>
</body>

</html>